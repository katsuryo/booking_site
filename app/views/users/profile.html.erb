

<article>
    <%#  サイドメニューstart *******************************************************************************%>
    <div class="side">
        <div class="side-menu">
            <%= link_to "アカウント", controller: 'users', id: current_user.id, action: 'show' %>
        </div>
        <div class="side-menu">
            <%= link_to "プロフィール", controller: 'users', id: current_user.id, action: 'profile' %>
        </div>
    </div>
    <%#  サイドメニューend *******************************************************************************%>
    <div class="content ">
        <div class="user-view-box">
            <div class="update-content">
                プロフィール
            </div>
            <div class="update-content center">
                <% if @user.profile_image.attached? %>
                    <%= image_tag @user.profile_image, class:"profile-image" %>
                <% else %>
                    <%= image_tag "default_user.jpg", class:"profile-image" %>
                <% end %>
            </div>
            <%= form_for @user do |f|%>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3">
                            <%= f.label :アイコン画像 %>
                        </label>
                        <div class="col-md-9">    
                            <%= f.file_field :profile_image %>
                        </div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3">
                            <%= f.label :ユーザ名 %>
                        </label>
                        <div class="col-md-9">    
                            <%= f.text_field :username %>
                        </div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3">
                            <%= f.label :自己紹介 %>
                        </label>
                        <div class="col-md-9">    
                            <%= f.text_area :profile %>
                        </div>
                    </div>
                </div>
                <div class="update-content">                
                    <%= f.submit "更新",class: 'btn btn-primary' %>
                </div>
            <%end %>
        </div>
    </div>
</article>
