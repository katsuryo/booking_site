<header class="header">
    <div class="header-left-nav">
        <div　class="site-name"><%= link_to "booking", root_path, class:"site-name-font" %></div>
        <div class="search-form">
            <%= search_form_for @q, url: search_rooms_path do |f| %>
                <div class="header-sharch d-lg-inline-block d-none">
                    <dt><%= f.text_field :adress_cont , class:"form-control text-position", placeholder: 'エリア' %></dt>
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="header-sharch"><%= f.submit ("検索") , class:"d-none" %></div>
            <% end %>
        </div>
        <div class="search-form">
            <%= search_form_for @q, url: search_rooms_path do |f| %>
                <div class="header-sharch d-lg-inline-block d-none">
                    <dt><%= f.text_field :introduction_or_room_name_cont , class:"form-control text-position", placeholder: 'キーワード' %></dt>
                    <i class="fas fa-search-plus"></i>
                </div>
                <div class="header-sharch"><%= f.submit ("検索") , class:"d-none" %></div>
            <% end %>
        </div>
    </div>
        <div class="header-right-nav">
            <% if user_signed_in? %> 
                <div class="dropdown nav-item header-nav-menu">
                    <div id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <% if current_user.profile_image.attached? %>
                            <%= image_tag current_user.profile_image, class:"profile-image margin-right" %>
                        <% else %>
                            <%= image_tag "default_user.jpg", class:"profile-image margin-right" %>
                        <% end %>                    
                    </div>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <button class="dropdown-item" type="button">
                            <%= link_to "ルーム登録", :new_room %>
                        </button>
                        <button class="dropdown-item" type="button">
                            <%= link_to "予約済みルーム", :reservations %>
                        </button>
                        <button class="dropdown-item" type="button">
                            <%= link_to "登録済みルーム", :rooms %>
                        </button>
                        <button class="dropdown-item" type="button">
                            <%= link_to "設定", user_path(current_user.id) %>
                        </button>
                        <button class="dropdown-item" type="button">
                            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                        </button>
                    </div>
                </div>
                <%= current_user.username%>
            <%else %>  
                <%= link_to "登録", new_user_registration_path ,class: 'btn btn-primary' %>
                <%= link_to "ログイン", new_user_session_path ,class: 'btn btn-primary' %>
            <%end %>
        </div>
    </header>